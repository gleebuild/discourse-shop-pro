<h2>编辑优惠券</h2>
<%= form_with model: @coupon, url: "/admin/plugins/shop/coupons/#{@coupon.id}", method: :patch, local: true do |f| %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="input-group"><label>Code</label><%= f.text_field :code %></div>
  <div class="input-group"><label>减免(分)</label><%= f.number_field :amount_off_cents %></div>
  <div class="input-group"><label>限制产品ID（可选）</label><%= f.number_field :shop_product_id %></div>
  <div class="input-group"><label>有效</label><%= f.check_box :active %></div>
  <div class="input-group"><label>到期时间（可选）</label><%= f.datetime_field :expires_at %></div>
  <div class="input-group"><label>使用上限（可选）</label><%= f.number_field :usage_limit %></div>
  <div><button class="btn btn-primary" type="submit">保存</button> <a class="btn" href="/admin/plugins/shop/coupons">返回</a></div>
<% end %>
<style>
.input-group { margin: 8px 0; display:flex; gap: 8px; align-items: center; }
.input-group label { width: 180px; }
.input-group input[type=text], .input-group input[type=number], .input-group input[type=datetime-local] { width: 420px; }
</style>