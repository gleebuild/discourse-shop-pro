<h2>产品管理</h2>
<p><a class="btn btn-primary" href="/admin/plugins/shop/products/new">新建产品</a></p>
<table class="table">
  <thead><tr><th>ID</th><th>标题</th><th>价格(分)</th><th>库存</th><th>发布</th><th></th></tr></thead>
  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.title %></td>
        <td><%= p.price_cents %></td>
        <td><%= p.stock %></td>
        <td><%= p.published %></td>
        <td>
          <a class="btn" href="/admin/plugins/shop/products/<%= p.id %>/edit">编辑</a>
          <form action="/admin/plugins/shop/products/<%= p.id %>" method="post" style="display:inline">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <button class="btn btn-danger" type="submit">删除</button>
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>