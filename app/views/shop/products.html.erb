<h2>商品列表</h2>
<div class="shop-grid">
  <% @products.each do |p| %>
    <div class="shop-card">
      <a href="/shop/products/<%= p.id %>">
        <% if p.image_url.present? %>
          <img src="<%= p.image_url %>" alt="<%= p.title %>">
        <% end %>
        <div class="shop-price">¥ <%= (p.price_cents/100.0).round(2) %></div>
        <div><%= p.title %></div>
      </a>
    </div>
  <% end %>
</div>